extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/orders.css")

block content 
  main.orders 
    if orders.items.length <= 0
      h1 Nothing there
    else
      ul
        each order in orders.items
          li.orders__item   
            h1 #{order._id}
            ul.orders__products  
              li.orders__products-item #{order.title}-( #{order.quantity})